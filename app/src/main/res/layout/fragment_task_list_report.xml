<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.classManagement.TaskListReportFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phiếu giao việc cho sinh viên"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:textColor="@color/blue"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--            Student section-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin sinh viên"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/baloo_2"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/studentName"
                android:text="Họ và tên:"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:fontFamily="@font/baloo_2"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/studentCode"
                android:text="MSSV:"
                android:textSize="16sp"
                android:fontFamily="@font/baloo_2"
                android:textColor="@color/black"/>
            <!--            Company section-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn vị thực tập"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/baloo_2"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/companyName"
                android:text="Đơn vị:"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:fontFamily="@font/baloo_2"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/companyTutorial"
                android:text="Cán bộ hướng dẫn:"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:fontFamily="@font/baloo_2"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian thực tập"
                android:textSize="16sp"
                android:fontFamily="@font/baloo_2"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fromDay"
                android:layout_marginBottom="10dp"
                android:text="Từ ngày:"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/baloo_2"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toDay"
                android:text="Đến ngày:"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/baloo_2"
                android:textColor="@color/black"/>
            <!--            Task section-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Công việc được giao"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/baloo_2"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/taskReview"
                android:layout_marginBottom="10dp"
                tools:itemCount="8"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/review_task_item"/>
            <!--            Approve section-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xác nhận của đơn vị"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/baloo_2"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/mentorName"
                android:text="Cán bộ hướng dẫn:"
                android:textSize="16sp"
                android:fontFamily="@font/baloo_2"
                android:textColor="@color/black"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin liên hệ:"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:fontFamily="@font/baloo_2"
                android:textColor="@color/black"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mentorEmail"
                android:text="Email:"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/baloo_2"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mentorPhone"
                android:layout_marginBottom="10dp"
                android:text="Điện thoại:"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/baloo_2"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/broadScore"
                android:orientation="vertical"
                android:visibility="gone">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng điểm:"
                        android:textSize="16sp"
                        android:fontFamily="@font/baloo_2"
                        android:textColor="@color/black"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/totalScore"
                        android:text="N/A"
                        android:textSize="16sp"
                        android:fontFamily="@font/baloo_2"
                        android:textColor="@color/black"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Theo thang điểm 10:"
                        android:textSize="16sp"
                        android:fontFamily="@font/baloo_2"
                        android:textColor="@color/black"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tenPointScale"
                        android:text="N/A"
                        android:textSize="16sp"
                        android:fontFamily="@font/baloo_2"
                        android:textColor="@color/black"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Theo thang điểm 4:"
                        android:textSize="16sp"
                        android:fontFamily="@font/baloo_2"
                        android:textColor="@color/black"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fourPointScale"
                        android:text="N/A"
                        android:textSize="16sp"
                        android:fontFamily="@font/baloo_2"
                        android:textColor="@color/black"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Điểm chữ:"
                        android:textSize="16sp"
                        android:fontFamily="@font/baloo_2"
                        android:textColor="@color/black"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/charPointScale"
                        android:text="N/A"
                        android:textSize="16sp"
                        android:fontFamily="@font/baloo_2"
                        android:textColor="@color/black"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notReadyForm"
                android:visibility="gone"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_lack_form">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Các biểu mẫu liên quan đến sinh viên chưa được bổ sung đầy đủ"
                    android:textSize="16sp"
                    android:fontFamily="@font/baloo_2"
                    android:textColor="@color/black"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>