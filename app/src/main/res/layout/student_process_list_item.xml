<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:weightSum="10">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/stt"
        android:text="MSSV"
        android:fontFamily="@font/baloo_2"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_weight="2"
        android:padding="5dp"
        android:textAlignment="center"
        android:background="@drawable/background_student_list"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/studentCode"
        android:textAlignment="center"
        android:text="STUDENT FULLNAME"
        android:fontFamily="@font/baloo_2"
        android:textStyle="bold"
        android:padding="5dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_weight="4"
        android:background="@drawable/background_student_list"/>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:background="@drawable/background_student_list">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            app:cardBackgroundColor="#D7D7D7">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/studentState"
                android:textAlignment="center"
                android:text="Chưa có"
                android:background=""
                android:fontFamily="@font/baloo_2"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"/>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

</LinearLayout>