<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.classManagement.CompanyReportFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/header">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phiếu đánh giá kết quả"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:textColor="@color/blue"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/scrollView"
        android:layout_above="@+id/saveButton"
        android:layout_below="@+id/header"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--            Student section-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin cán bộ chấm báo cáo"
                android:textSize="20sp"
                android:fontFamily="@font/baloo_2"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/teacherName"
                android:text="Họ và tên:"
                android:textSize="16sp"
                android:fontFamily="@font/baloo_2"
                android:textColor="@color/black"/>
            <!--            Company section-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin sinh viên"
                android:textSize="20sp"
                android:fontFamily="@font/baloo_2"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/studentName"
                android:text="Họ và tên:"
                android:textSize="16sp"
                android:fontFamily="@font/baloo_2"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/studentCode"
                android:text="MSSV:"
                android:textSize="16sp"
                android:fontFamily="@font/baloo_2"
                android:textColor="@color/black"/>
            <!--            Task section-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phần đánh giá sinh viên"
                android:textSize="20sp"
                android:fontFamily="@font/baloo_2"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp">
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:text="Nội dung"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:fontFamily="@font/baloo_2"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="Điểm"
                        android:fontFamily="@font/baloo_2"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>/>
                </TableRow>
                <!--                part I-->
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:text="I. Hình thức trình bày (0.5)"
                        android:textStyle="bold"
                        android:fontFamily="@font/baloo_2"
                        android:textAlignment="textStart"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:fontFamily="@font/baloo_2"
                        android:textAlignment="center"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="I.1. Đúng định dạng, sử dụng font chữ tiếng Việt (0,25)"
                        android:textAlignment="textStart"
                        android:fontFamily="@font/baloo_2"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:id="@+id/I1score"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="@font/baloo_2"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="I.2. Trình bày mạch lạc, súc tích, không có lỗi chính tả (0,25)"
                        android:textAlignment="textStart"
                        android:fontFamily="@font/baloo_2"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:id="@+id/I2score"
                        android:fontFamily="@font/baloo_2"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                </TableRow>
                <!--                partII-->
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:text="II. Phiếu theo dõi (0,5)"
                        android:textStyle="bold"
                        android:fontFamily="@font/baloo_2"
                        android:textAlignment="textStart"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:fontFamily="@font/baloo_2"
                        android:textAlignment="center"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="II.1. Có lịch làm việc đầy đủ cho 8 tuần (0,25)"
                        android:textAlignment="textStart"
                        android:fontFamily="@font/baloo_2"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:id="@+id/II1score"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="@font/baloo_2"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="II.2. Số buổi thực tập tại cơ quan trong 1 tuần >=6; ít hơn 6 buổi 0.0 điểm"
                        android:textAlignment="textStart"
                        android:fontFamily="@font/baloo_2"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:id="@+id/II2score"
                        android:fontFamily="@font/baloo_2"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                </TableRow>
                <!--                part III-->
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:text="III. Đánh giá của công ty (8)"
                        android:textStyle="bold"
                        android:fontFamily="@font/baloo_2"
                        android:textAlignment="textStart"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                    <TextView
                        android:id="@+id/III1score"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:fontFamily="@font/baloo_2"
                        android:textAlignment="center"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                </TableRow>
<!--                part IV-->
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:text="IV. Nội dung thực tập (1)"
                        android:textStyle="bold"
                        android:fontFamily="@font/baloo_2"
                        android:textAlignment="textStart"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:fontFamily="@font/baloo_2"
                        android:textAlignment="center"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="@string/IVpart"
                        android:textAlignment="textStart"
                        android:fontFamily="@font/baloo_2"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/IVscore"
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="@font/baloo_2"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="Tổng cộng"
                        android:textAlignment="textStart"
                        android:textStyle="bold"
                        android:fontFamily="@font/baloo_2"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:id="@+id/totalScore"
                        android:fontFamily="@font/baloo_2"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="Điểm trừ"
                        android:textAlignment="textStart"
                        android:padding="3dp"
                        android:fontFamily="@font/baloo_2"
                        android:background="@drawable/background_report_cell"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:id="@+id/minusScore"
                        android:textStyle="bold"
                        android:fontFamily="@font/baloo_2"
                        android:gravity="center"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:text="Điểm còn lại"
                        android:textStyle="bold"
                        android:fontFamily="@font/baloo_2"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:id="@+id/restScore"
                        android:textStyle="bold"
                        android:fontFamily="@font/baloo_2"
                        android:textAlignment="center"
                        android:padding="3dp"
                        android:background="@drawable/background_report_cell"/>
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="Lưu" />
</RelativeLayout>